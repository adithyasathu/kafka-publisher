{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016"],
    "outDir": "./build",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "types": ["node", "mocha"]
  },
  "compileOnSave" : false,
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
   ]
}